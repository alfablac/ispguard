{
  "manifest_version": 2,
  "name": "ISP Guard v2",
  "version": "2.0.2",
  "description": "Bloqueia navegação para domínios especificados a menos que você esteja no seu IP/ISP residencial.",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Configurações do ISP Guard"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "blocked.html",
    "blocked.js",
    "style.css"
  ]
}