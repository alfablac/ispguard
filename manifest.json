{
  "manifest_version": 3,
  "name": "ISP Guard v2",
  "version": "1.0.4",
  "description": "Bloqueia navegação para domínios especificados a menos que você esteja no seu IP/ISP residencial.",
  "permissions": [
    "storage",
    "webRequest",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://ipapi.co/*",
    "https://ipify.org/*",
    "https://api64.ipify.org/*",
    "https://ifconfig.co/*",
    "https://ipwho.is/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Configurações do ISP Guard"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "style.css", "options.js"],
      "matches": ["<all_urls>"]
    }
  ]
}